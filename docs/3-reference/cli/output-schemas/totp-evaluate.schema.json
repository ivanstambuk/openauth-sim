{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "cli.totp.evaluate",
  "type": "object",
  "required": ["event", "status", "data"],
  "properties": {
    "event": { "type": "string", "enum": ["cli.totp.evaluate"] },
    "status": { "type": "string" },
    "reasonCode": { "type": "string" },
    "telemetryId": { "type": "string" },
    "sanitized": { "type": "boolean" },
    "data": {
      "type": "object",
      "required": ["credentialReference", "valid", "matchedSkewSteps", "algorithm"],
      "properties": {
        "reasonCode": { "type": "string" },
        "credentialReference": { "type": "boolean" },
        "valid": { "type": "boolean" },
        "matchedSkewSteps": { "type": "integer" },
        "algorithm": { "type": "string" },
        "digits": { "type": "integer" },
        "stepSeconds": { "type": "integer" },
        "driftBackwardSteps": { "type": "integer" },
        "driftForwardSteps": { "type": "integer" },
        "otp": { "type": "string" },
        "previews": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["delta", "otp"],
            "properties": {
              "counter": { "type": ["string", "null"] },
              "delta": { "type": "integer" },
              "otp": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "trace": { "type": "object" },
        "reason": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "event": "cli.totp.evaluate",
      "status": "success",
      "reasonCode": "success",
      "telemetryId": "cli-totp-telemetry-id",
      "sanitized": true,
      "data": {
        "reasonCode": "success",
        "credentialReference": false,
        "valid": true,
        "matchedSkewSteps": 0,
        "algorithm": "SHA1",
        "digits": 6,
        "stepSeconds": 30,
        "driftBackwardSteps": 0,
        "driftForwardSteps": 0,
        "otp": "123456",
        "previews": [
          {
            "delta": 0,
            "otp": "123456"
          }
        ],
        "trace": {
          "operation": "totp.evaluate",
          "steps": [
            {
              "id": "step.01",
              "summary": "..."
            }
          ]
        }
      }
    }
  ]
}
