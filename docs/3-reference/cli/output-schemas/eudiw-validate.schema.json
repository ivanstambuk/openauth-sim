{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "cli.eudiw.validate",
  "type": "object",
  "required": ["requestId", "status", "profile", "responseMode", "presentations", "telemetry"],
  "properties": {
    "requestId": { "type": "string" },
    "status": { "type": "string" },
    "profile": { "type": "string" },
    "responseMode": { "type": "string" },
    "presentations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["credentialId", "format", "holderBinding", "vpToken", "disclosureHashes"],
        "properties": {
          "credentialId": { "type": "string" },
          "format": { "type": "string" },
          "holderBinding": { "type": "boolean" },
          "trustedAuthorityMatch": { "type": ["string", "null"] },
          "vpToken": { "type": "object" },
          "disclosureHashes": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    },
    "trace": { "type": "object" },
    "telemetry": { "type": "object" }
  },
  "additionalProperties": true,
  "examples": [
    {
      "requestId": "HAIP-0001",
      "status": "SUCCESS",
      "profile": "HAIP",
      "responseMode": "DIRECT_POST_JWT",
      "presentations": [
        {
          "credentialId": "pid-haip-baseline",
          "format": "dc+sd-jwt",
          "holderBinding": true,
          "trustedAuthorityMatch": null,
          "vpToken": {
            "vp_token": "BASE64URL",
            "presentation_submission": {}
          },
          "disclosureHashes": [
            "sha-256:..."
          ]
        }
      ],
      "trace": {
        "operation": "eudiw.validate",
        "steps": [
          {
            "id": "step.01",
            "summary": "..."
          }
        ]
      },
      "telemetry": {
        "event": "oid4vp.response.validated",
        "fields": {
          "responseMode": "DIRECT_POST_JWT",
          "telemetryId": "oid4vp-telemetry-id",
          "profile": "HAIP",
          "requestId": "HAIP-0001",
          "walletPreset": "pid-haip-baseline",
          "presentations": 1
        }
      }
    }
  ]
}
