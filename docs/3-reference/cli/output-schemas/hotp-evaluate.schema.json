{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "cli.hotp.evaluate",
  "type": "object",
  "required": ["event", "status", "data"],
  "properties": {
    "event": { "type": "string", "enum": ["cli.hotp.evaluate"] },
    "status": { "type": "string" },
    "reasonCode": { "type": "string" },
    "telemetryId": { "type": "string" },
    "sanitized": { "type": "boolean" },
    "data": {
      "type": "object",
      "required": ["credentialReference", "previousCounter", "nextCounter"],
      "properties": {
        "reasonCode": { "type": "string" },
        "credentialReference": { "type": "boolean" },
        "credentialId": { "type": "string" },
        "algorithm": { "type": "string" },
        "digits": { "type": "integer" },
        "previousCounter": { "type": "integer" },
        "nextCounter": { "type": "integer" },
        "otp": { "type": "string" },
        "previews": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["delta", "otp"],
            "properties": {
              "counter": { "type": ["string", "null"] },
              "delta": { "type": "integer" },
              "otp": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "trace": { "type": "object" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "event": "cli.hotp.evaluate",
      "status": "success",
      "reasonCode": "success",
      "telemetryId": "cli-hotp-telemetry-id",
      "sanitized": true,
      "data": {
        "reasonCode": "success",
        "credentialReference": false,
        "algorithm": "SHA1",
        "digits": 6,
        "previousCounter": 0,
        "nextCounter": 1,
        "otp": "123456",
        "previews": [
          {
            "delta": 0,
            "otp": "123456"
          }
        ],
        "trace": {
          "operation": "hotp.evaluate",
          "steps": [
            {
              "id": "step.01",
              "summary": "..."
            }
          ]
        }
      }
    }
  ]
}
